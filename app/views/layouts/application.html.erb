<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>


<body>

  <div class="header">
    <div class="header-left">すごいまとめサイト</div>
    <div class="header-right">
      <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to '登録内容編集', edit_user_registration_path, :class => 'navbar-link' %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
      <% else %>
      <%= link_to "会員登録", new_user_registration_path, :class => 'navbar-link'  %>
      <%= link_to "ログイン", new_user_session_path, :class => 'navbar-link'  %>
      <% end %>
    </div>
  </div>

  <% if notice %>
  <p class="alert alert-notice"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="alert alert-error"><%= alert %></p>
  <% end %>

  <%= yield %>
  <%= link_to "Home", "/" %>
</body>
</html>
