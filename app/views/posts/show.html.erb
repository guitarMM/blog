<div class="show">
  <div class="show-title">
    <%= @post.title %>
  </div>
  <hr>
  <div class="show-body">
    <%= simple_format(@post.body) %>
  </div>
  <ul>
    <div class="show-comment">
      <strong>Comment</strong><br>
      <% for comment in @post.comments.each %>
        <li><%= comment.title %></li>
      <% end %>
    </div>
    <div class="show-newcomment">
      <li>
        <%= form_for [@post, @post.comments.build] do |f| %>
        <%= f.text_field :title %>
        <%= f.hidden_field :post_id %>
        <%= f.submit %>
        <% end %>
      </li>
    </div>
  </ul>
</div>
