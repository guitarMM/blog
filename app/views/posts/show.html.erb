<div class="title">
  <strong>Title</strong>
  <%= @post.title %>
</div>
<div class="body">
  <strong>Text</strong>
  <%= simple_format(@post.body) %>
</div>


<ul>

  <div class="comments">
    <strong>Comment</strong><br>
    <% for comment in @post.comments.each %>
      <li><%= comment.title %></li>
    <% end %>
  </div>

  <div class="new_comment">
    <li>
      <%= form_for [@post, @post.comments.build] do |f| %>
      <%= f.text_field :title %>
      <%= f.submit %>
      <% end %>
    </li>
  </div>


</ul>
